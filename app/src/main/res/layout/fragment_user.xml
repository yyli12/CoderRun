<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 tools:context="cn.edu.fudan.cs12.coderrun.fragment.UserFragment"
			  android:orientation="vertical">

	<!-- TODO: Update blank fragment layout -->

	<ImageView
		android:id="@+id/user_avatar"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_gravity="center_horizontal|top"
		android:layout_marginTop="42dp"
		android:src="@mipmap/ic_default_avatar"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="13127916101"
		android:id="@+id/user_mobile"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="25dp"
		android:textSize="25sp"
		android:textColor="@color/primary"
		android:layout_below="@+id/user_avatar"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="上海市 浦东新区"
		android:id="@+id/user_area"
		android:textColor="@color/gray"
		android:textSize="20sp"
		android:layout_below="@+id/user_mobile"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_width="300sp"
		android:layout_height="wrap_content"
		android:text="跑跑跑跑跑你妹啊跑跑跑跑跑你妹啊跑跑跑跑跑你妹啊"
		android:id="@+id/user_slogan"
		android:textColor="@color/gray"
		android:textSize="20sp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/component"
		android:layout_alignParentBottom="true"
		android:layout_alignParentStart="true"
		android:layout_marginBottom="15dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="de2d3fa7"
				android:id="@+id/user_init_password"
				android:layout_gravity="center_horizontal"
				android:textSize="20dp"
				android:textColor="@color/gray_dark"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"/>

		</RelativeLayout>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/button_reset_init_password"
			android:id="@+id/button_reset_init_password"
			android:layout_gravity="center_horizontal"
			android:layout_below="@+id/user_init_password"
			android:layout_centerHorizontal="true"
			/>
	</LinearLayout>

	<ImageView
		android:layout_width="15sp"
		android:layout_height="15sp"
		android:id="@+id/imageView3"
		android:src="@drawable/ic_edit"
		android:layout_above="@+id/user_mobile"
		android:layout_alignEnd="@+id/user_avatar"/>

	<ImageView
		android:layout_width="15sp"
		android:layout_height="15sp"
		android:id="@+id/imageView4"
		android:src="@drawable/ic_edit"
		android:layout_alignBottom="@+id/user_slogan"
		android:layout_alignEnd="@+id/user_slogan"/>

	<ImageView
		android:layout_width="15sp"
		android:layout_height="15sp"
		android:id="@+id/imageView5"
		android:src="@drawable/ic_edit"
		android:layout_alignBottom="@+id/user_area"
		android:layout_toEndOf="@+id/user_area"/>

</RelativeLayout>
