<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:fancy="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/app_green"
		android:text="距离：10 km"
		android:id="@+id/final_distance"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/app_green"
		android:text="速度：10 min/km"
		android:id="@+id/final_speed"
		android:layout_below="@+id/final_distance"
		android:layout_centerHorizontal="true"/>
	<com.lantouzi.wheelview.WheelView
		android:id="@+id/score_picker"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff"
		app:lwvHighlightColor="@color/app_green"
		android:layout_below="@+id/final_speed"
		android:layout_alignParentStart="true"/>
</RelativeLayout>